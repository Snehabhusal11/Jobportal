<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Register | Elevate Workforce Solutions</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      min-height: 100vh;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #f0f4ff, #d9e2ff);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      color: #2c3e50;
    }

    .form-container {
      background: #ffffff;
      border-radius: 18px;
      box-shadow: 0 12px 32px rgba(79, 84, 132, 0.15);
      width: 100%;
      max-width: 440px;
      padding: 48px 36px 56px;
      display: flex;
      flex-direction: column;
      gap: 32px;
    }

    .form-container h2 {
      margin: 0;
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      color: #1e2a4d;
      user-select: none;
      letter-spacing: 0.07em;
    }

    form {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 24px;
    }

    .form-group {
      position: relative;
      width: 100%;
    }

    label {
      display: block;
      font-weight: 600;
      font-size: 1rem;
      color: #4a5a7c;
      margin-bottom: 8px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="tel"],
    select {
      width: 100%;
      padding: 14px 20px;
      border-radius: 14px;
      border: 2px solid #cfd7e3;
      background-color: #f9fbff;
      color: #2c3e50;
      font-size: 1rem;
      font-weight: 400;
      transition: border-color 0.3s ease, background-color 0.3s ease;
    }

    input:hover,
    select:hover {
      border-color: #7a99f2;
    }

    input:focus,
    select:focus {
      border-color: #5661f9;
      background-color: #e5ebff;
      box-shadow: 0 0 10px #5661f9aa;
      outline: none;
    }

    ::placeholder {
      color: #9aa2b4;
      font-weight: 300;
      font-style: italic;
    }

    button.btn {
      background: linear-gradient(135deg, #5661f9 0%, #2f43eb 100%);
      border: none;
      border-radius: 16px;
      color: white;
      font-weight: 700;
      font-size: 1.2rem;
      padding: 16px 0;
      cursor: pointer;
      box-shadow: 0 12px 20px rgba(86, 97, 249, 0.5);
      transition: background 0.4s ease, transform 0.25s ease;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }

    button.btn:hover,
    button.btn:focus {
      background: linear-gradient(135deg, #2f43eb 0%, #5661f9 100%);
      transform: scale(1.05);
      box-shadow: 0 16px 28px rgba(47, 67, 235, 0.8);
      outline: none;
    }

    button.btn:active {
      transform: scale(0.97);
      box-shadow: 0 8px 14px rgba(47, 67, 235, 0.6);
    }

    @media (max-width: 480px) {
      .form-container {
        padding: 36px 24px 44px;
      }
      .form-container h2 {
        font-size: 2rem;
      }
      input, select {
        font-size: 0.95rem;
        padding: 14px 16px;
      }
      button.btn {
        font-size: 1.05rem;
        padding: 14px 0;
      }
    }
  </style>
</head>
<body>
  <main class="form-container" aria-label="Registration Form">
    <h2>Register</h2>
    <form id="registerForm">
      <div class="form-group">
        <label for="role">Select Role</label>
        <select id="role" name="role" required>
          <option value="" disabled selected>Select your role</option>
          <option value="jobseeker">Jobseeker</option>
          <option value="company">Company</option>
          <option value="admin">Admin</option>
        </select>
      </div>

      <div class="form-group">
        <label for="fullName">Full Name</label>
        <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" required />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required />
      </div>

      <div class="form-group">
        <label for="phone">Phone</label>
        <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required />
      </div>

      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" id="address" name="address" placeholder="Enter your address" required />
      </div>

      <button type="submit" class="btn">Register</button>
    </form>
  </main>

  <script>
    document.getElementById("registerForm").addEventListener("submit", async function (event) {
      event.preventDefault();

      const roleSelect = document.getElementById("role");
      const selectedRole = roleSelect.value;

      const roleMap = {
        "admin": 1,
        "company": 2,
        "jobseeker": 3
      };

      const roleValue = roleMap[selectedRole];
      console.log("Selected role (string):", selectedRole);
      console.log("Mapped role (numeric):", roleValue);

      if (!roleValue) {
        alert("Please select your role (Jobseeker, Company, or Admin).");
        roleSelect.focus();
        return;
      }

      const fullName = document.getElementById("fullName").value.trim();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value;
      const phone = document.getElementById("phone").value.trim();
      const address = document.getElementById("address").value.trim();

      console.log("Collected form data:", {
      roleId: roleValue,
      fullName,
      email,
      password,
      phone,
      address
    });

      if (!fullName || !email || !password || !phone || !address) {
        alert("Please fill in all the fields.");
        return;
      }

      try {
        console.log("Sending request to /api/user/addUser...");

        const response = await fetch("/api/user/addUser", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            roleId: roleValue,
            fullName,
            email,
            password,
            phone,
            address
          }),
        });

        const data = await response.json();
        console.log("Server response status:", response.status);
        console.log("Server response data:", data);
        
        if (response.ok) {
          if (selectedRole === "jobseeker" || selectedRole === "admin") {
            alert("Registration successful! Redirecting to login...");
            window.location.href = "/login";
            console.log(response)
          } else if (selectedRole === "company") {
            const userId = data.id;
            window.location.href = `/createCompany?userId=${userId}`;
          }
        } else {
          alert(data.error || "Registration failed. Please try again.");
        }
      } catch (error) {
        console.error("Error during registration:", error);
        alert("An error occurred while registering. Please try again later.");
      }
    });
  </script>
</body>
</html>
